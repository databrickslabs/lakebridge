[Unit]
Description=Remorph usage collection service
After=network.target

[Service]
ExecStart=/usr/bin/python3 $HOME/.databricks/remorph/assessments/scheduler/pipeline_scheduler.py
WorkingDirectory=$HOME/.databricks/remorph/assessments/scheduler/
StandardOutput=journal
StandardError=journal
Restart=always
User=root

[Install]
WantedBy=multi-user.target
